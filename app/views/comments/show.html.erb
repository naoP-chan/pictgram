<div class="topic-index-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="topic-index-single">
          <h2 class="topic-author">
            <%= @topic.user.name %>
          </h2>
          <%= image_tag @topic.image.url %>
          <p class="topic-text">
            <%= @topic.description %>
          </p>
          
          <%= form_for @comment do |f| %>
            <div class="form-group">
              <%= f.label :message, class: 'text-white' %>
              <%= f.text_field :message, class: 'form-control message-form' %>
            </div>
            <%= f.hidden_field :topic_id, :value => params[:id] %>
            <%= f.submit "投稿", class: 'btn btn-black btn-block' %>
          <% end %>

          
        </div>
      </div>
    </div>
  </div>
</div>